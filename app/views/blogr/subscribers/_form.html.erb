<%= form_for @subscriber, html: { :class => "form-inline" } do |f| %>
  <%= render "blogr/shared/form_errors", object: @subscriber %>

  <div class="form-group">
    <%= f.text_field :email, :class => "form-control", placeholder: "Enter email address" %>
  </div>
  <%= f.submit "Subscribe", :class => "btn btn-danger" %>
<% end %>
