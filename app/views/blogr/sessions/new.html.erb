<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

      <div class="m-form">
        <h1 class="heading-s mbm">Author login</h1>
        <p>
          Restricted access for the authors of this blog.
        </p>
        <hr>
        <%= form_tag sessions_path, role: "form" do %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email], :class => "form-control", placeholder: "Enter email" %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, :class => "form-control", placeholder: "Password" %>
          </div>
          <%= submit_tag "Log In", :class => "btn btn-danger" %>
        <% end %>
      </div>

    </div>
    <div class="col-md-4"></div>
  </div>
</div>
