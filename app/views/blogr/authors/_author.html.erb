<tr>
  <td><%= image_tag author.avatar, alt: "author avatar", :class => "img-circle avatar user-avatar avatar-xs" %></td>
  <td><%= author.name %></td>
  <td><%= author.email %></td>
  <td><%= author.posts.count %></td>
  <% if author == current_author %>
    <td><%= link_to "Edit", edit_author_path(current_author) %></td>
  <% end %>
</tr>
