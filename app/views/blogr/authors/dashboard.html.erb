<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <div class="section m-default mbl">
        <h2 class="heading-m">
          Authors
          <%= link_to "Add Author", new_author_path, :class => "btn btn-success pull-right" %>
        </h2>
        <table class="table table-striped table-bordered mtl">
          <tr>
            <th>Author</th>
            <th>Email</th>
            <th>Posts</th>
            <th></th>
          </tr>
          <%= render @authors %>
        </table>
      </div>

      <div class="section m-default">
        <h2 class="heading-m">
          Posts
          <%= link_to "New Post", new_post_path, :class => "btn btn-success pull-right" %>
        </h2>
        <table class="table table-striped table-bordered mtl">
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th colspan="2"></th>
          </tr>
          <%= render "posts" %>
        </table>
      </div>

    </div>
    <div class="col-md-2"></div>
  </div>
</div>
