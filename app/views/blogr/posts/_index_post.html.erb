<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 post">
    <h2 class="headline text-center"><%= link_to "#{post.title}", post, :class => "link-no-style" %></h2>
    <div class="info text-center mtl mbl">
      <p class="text-muted">
        <%= image_tag post.author.avatar, alt: "author avatar", :class => "img-circle avatar user-avatar avatar-xs" %>
        <%= post.author.name %>
        wrote this
        <%= "on #{post.published_at.strftime("%b %d, %Y")}" if post.published_at %>
        |
        <%= link_to "Comments", post_url(post, anchor: "disqus_thread") %>
        <% if is_admin? %>
          |
          <%= link_to 'Edit', edit_post_path(post) %>
          |
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link-red" %>
        <% end %>
      </p>

    </div>

    <div class="content">
      <%= truncate_html(simple_format(post.text), length: 800, omission: "... #{link_to 'Read more', post}") %>
    </div>


    <hr class="mtxl mbxl">

  </div>
  <div class="col-md-2"></div>
</div>
